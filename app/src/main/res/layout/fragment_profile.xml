<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgProfile1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/siswa_1"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Orang 1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvClass1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas: XI PPLG 1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvAbsen1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Absen: 11"
            android:textSize="16sp"
            android:layout_marginBottom="32dp" />

        <ImageView
            android:id="@+id/imgProfile2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/siswa_2"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Orang 2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvClass2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas: XI PPLG 1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvAbsen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Absen: 29"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
